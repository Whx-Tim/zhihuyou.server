{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "~/*": [
        "./src/*"
      ],
      "~test/*": [
        "./test/*"
      ],
      "types/*": ["./types/*"]
    },
    "strict": true
  },
  "include": ["src", "test", "types", "prisma"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
